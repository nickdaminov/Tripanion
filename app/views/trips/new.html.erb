<h1>Having a new Idea for a trip ? It starts here </h1>

<%= form_for :trip, url: trips_path do |f| %>
  <p>
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </p>

  <p>
    <%= f.label :time %><br>
    <%= f.text_field :time %>
  </p>

  <p>
    <%= f.label :travel %><br>
    <%= f.text_field :travel %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back to Trip List', trips_path,
    data: { confirm: 'Going back to Trip List will discard creating a new trip. Do you want to proceed ?' } %>
