<h1>Browsing Trips</h1>

<table>
  <tr>
    <th>Location</th>
    <th>Time</th>
  </tr>

  <% @trip.each do |trip| %>
    <tr>
      <td><%= trip.location %></td>
      <td><%= trip.time %></td>
      <td><%= link_to 'Show', trip_path(trip) %></td>
      <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
      <td><%= link_to 'Delete', trip_path(trip),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
